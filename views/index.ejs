<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% posts.forEach((post) => { %>
            <div class="item">
                <div class="image">
                    <img src="<%= post.image %>" alt="">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= post._id %>"><%= post.title %></a>
                    <div class="meta">
                        <span><%= post.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- post.body.substring(0, 100) %>&#8230</p>
                    </div>
                    <div class="extra">
                        <a class="ui loaded basic violet button" href="/blogs/<%= post._id %>">
                            <span>Read More</span>
                            <i class="chevron right icon"></i>
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>

<% include ./partials/footer %>