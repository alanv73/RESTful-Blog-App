<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= post.title %></div>
    <form class="ui form" action="/blogs/<%= post._id %>?_method=PUT" method="post">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" value="<%= post.title %>" required>
        </div>
        <div class="field">
            <label for="blog[image]">Image</label>
            <input type="text" name="blog[image]" value="<%= post.image %>">
        </div>
        <div class="field">
            <label for="blog[title]">Post Content</label>
            <textarea name="blog[body]" required><%= post.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<% include ./partials/footer %>