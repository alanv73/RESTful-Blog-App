<% include ./partials/header %>
<div class="ui main text container">
    <div class="ui huge header"><%= post.title %></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image" src="<%= post.image %>" alt="">
            <div class="content">
                <span><%= post.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- post.body %></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%= post._id %>/edit">Edit Post</a>
            <form id="delete" action="/blogs/<%= post._id %>?_method=DELETE" method="post">
                <button class="ui red basic button">Delete Post</button>
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer %>